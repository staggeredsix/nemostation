FROM python:3.11-slim

WORKDIR /app

RUN set -eux; \
    apt-get update; \
    apt-get install -y --no-install-recommends curl; \
    apt-get install -y --no-install-recommends docker.io || true; \
    if ! command -v docker >/dev/null 2>&1; then \
        apt-get install -y --no-install-recommends docker-cli || apt-get install -y --no-install-recommends moby-cli; \
    fi; \
    command -v docker; \
    docker --version; \
    rm -rf /var/lib/apt/lists/*

COPY nemotron-agent-demo/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY nemotron-agent-demo/ ./
COPY vendors/daystrom_memory_lattice_alpha1 /app/nemostation/vendors/daystrom_memory_lattice_alpha1

EXPOSE 7860

ENV GRADIO_SERVER_NAME=0.0.0.0 \
    GRADIO_SERVER_PORT=7860

CMD ["python", "-m", "src.ui.app"]
